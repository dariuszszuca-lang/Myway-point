rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Pomocnicza funkcja - sprawdza czy użytkownik jest zalogowany
    function isAuthenticated() {
      return request.auth != null;
    }

    // Pomocnicza funkcja - sprawdza czy użytkownik jest adminem
    function isAdmin() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Pomocnicza funkcja - sprawdza czy użytkownik jest właścicielem dokumentu
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // USERS - kolekcja użytkowników z rolami
    match /users/{userId} {
      // Użytkownik może czytać i tworzyć swój własny dokument
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      // Tylko admin może modyfikować role
      allow update: if isAdmin() || (isOwner(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']));
    }

    // PATIENTS - pacjenci
    match /patients/{patientId} {
      // Admini mają pełny dostęp
      allow read, write: if isAdmin();
      // Pacjent może czytać tylko swój rekord (powiązany przez email lub patientId w users)
      allow read: if isAuthenticated() &&
        (resource.data.email == request.auth.token.email ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.patientId == patientId);
    }

    // THERAPISTS - terapeuci
    match /therapists/{therapistId} {
      // Wszyscy zalogowani mogą czytać (potrzebne do kalendarza)
      allow read: if isAuthenticated();
      // Tylko admini mogą modyfikować
      allow write: if isAdmin();
    }

    // AVAILABILITY - dostępność terapeutów
    match /availability/{availabilityId} {
      // Wszyscy zalogowani mogą czytać (potrzebne do kalendarza)
      allow read: if isAuthenticated();
      // Tylko admini mogą modyfikować
      allow write: if isAdmin();
    }

    // SESSIONS - sesje/rezerwacje
    match /sessions/{sessionId} {
      // Admini mają pełny dostęp
      allow read, write: if isAdmin();
      // Wszyscy zalogowani mogą czytać sesje (potrzebne do wyświetlania zajętych terminów)
      // Na frontendzie filtrujemy - pacjent widzi tylko że termin jest zajęty, nie widzi danych innych pacjentów
      allow read: if isAuthenticated();
      // Pacjent może tworzyć rezerwację tylko dla siebie
      allow create: if isAuthenticated() &&
        request.resource.data.patientId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.patientId;
    }
  }
}
